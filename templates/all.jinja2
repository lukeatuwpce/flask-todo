{% extends 'base.jinja2' %}

{% block subtitle %}ALL the things!{% endblock subtitle %}

{% block content %}
<ul>
    {% for task in tasks %}
    <li>
        {{ task.name }}<br>
        {% if task.performed %}
            Done on {{ task.performed }} by {{ task.performed_by.name }}
        {% else %}
            Undone
        {% endif %}
    </li>
    {% endfor %}
</ul>
{% endblock content %}
